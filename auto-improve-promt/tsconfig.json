{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
  "allowImportingTsExtensions": true,
    "outDir": "dist",
    "noEmit": true,
    "types": ["node"]
  },
  "include": ["**/*.ts"]
}
